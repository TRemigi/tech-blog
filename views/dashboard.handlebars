<section class="row">
    <div class="col-12 mb-4">
        <h2>Create New Post</h2>
        <form class="new-post-form">
            <div>
                <label for="post-title">Title</label>
                <br>
                <input type="text" id="post-title" name="post-title" class="form-control input-lg" />
            </div>
            <div>
                <label for="post-content">Content</label>
                <br>
                <textarea type="text" id="post-content" name="post-content" class="form-control input-lg mb-1"
                    rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>
    </div>
</section>
{{#if posts.length}}
<section class="row">
    <div class="col-12">
        <h2 class="font-weight-bold">Your Posts</h2>
        <div>
            {{#each posts as |post|}}
            <div class="mb-4">
                {{> post-info post}}
                <button type="button" class="btn btn-secondary mt-2">
                    <a href="/dashboard/edit/{{post.id}}">Edit Post</a>
                </button>
            </div>
            {{/each}}
        </div>
    </div>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>