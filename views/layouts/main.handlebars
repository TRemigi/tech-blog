  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <div class="container">
    <header class="row mt-3 mb-3 border-bottom border-dark">
      <div class="col-12 col-md-6 justify-content-start align-items-end">
        <h1 class="font-weight-bold">
          <a href="/">The Tech Blog</a>
        </h1>
      </div>
      <div class="col-12 col-md-6 d-flex justify-content-end align-items-end">
        <nav>
          <button type="button" class="btn btn-primary">
            <a href="/">Home</a>
          </button>
          {{#if loggedIn}}
          <button type="button" class="btn btn-primary">
            <a href="/dashboard">Dashboard</a>
          </button>
          <button id="logout" class="btn btn-primary">Log Out</button>
          {{else}}
          <button class="btn btn-primary">
            <a href="/login">Log In</a>
          </button>
          {{/if}}
        </nav>
      </div>
    </header>
    <main>
      {{{ body }}}
    </main>
    <footer>
      <div class="row mt-5">
        <div class="col-12 d-flex justify-content-center">
      <p class="font-weight-bold">&copy; Taylor Remigi 2020</p>
        </div>
      </div>
    </footer>
  </div>
  {{#if loggedIn}}
  <script src="/javascript/logout.js"></script>
  {{/if}}
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
