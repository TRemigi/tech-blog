<article>
  <a class="font-weight-bold" href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="mt-3">
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <label for="post-title" class="font-weight-bold">Title</label>
      <input name="post-title" type="text" class="form-control input-lg border border-dark border-bottom-0 mb-3" value="{{post.title}}" />
    </div>
    <div>
      <label for="post-content" class="font-weight-bold">Content</label>
      <textarea type="text" id="post-content" name="post-content" class="form-control input-lg border border-dark" rows="5">{{post.post_content}}</textarea>
    </div>
    <div class="d-flex justify-content-end">
      By you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-primary">Save post</button>
    <button type="button" id="delete-btn" class="btn btn-danger">Delete post</button>
  </form>
</article>

<form id="comment-form" class="mt-4">
  <div>
    <textarea type="text" name="comment-body" class="form-control input-lg mb-1" rows="5"></textarea>
  </div>
  <div>
    <button type="submit" class="btn btn-primary">Add Comment</button>
  </div>
</form>
{{> comments post.comments }}
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>